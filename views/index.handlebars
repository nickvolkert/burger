<h1>Eat Da Burger</h1>

<h3>Enter a burger below! Eat it? Click Devoured!</h3>

<div id="burgerContainer">
  <div id="unEaten">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        	<li>
        	   <p>{{this.name}}</p>
        	</li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div id="eaten">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
        	<li>
        	   <p>{{this.name}}</p>
        	</li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burgerForm"></textarea>
    <button type="submit" id="burgerBTN">Add a Burger</button>
  </form>
</div>
